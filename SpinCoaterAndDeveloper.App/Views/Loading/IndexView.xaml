<UserControl
    x:Class="SpinCoaterAndDeveloper.App.Views.IndexView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="clr-namespace:SpinCoaterAndDeveloper.App.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:listbox="clr-namespace:PrismAutomationPlatformExt;assembly=PrismAutomationPlatformExt"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vc="clr-namespace:ValueConverters;assembly=ValueConverters"
    xmlns:viewmodels="clr-namespace:SpinCoaterAndDeveloper.App.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:IndexViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <vc:BoolInverter x:Key="BoolInverter" />
    </UserControl.Resources>
    <StackPanel>
        <TextBlock
            Margin="2"
            HorizontalAlignment="Center"
            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
            Text="{Binding MachineStatus}" />
        <TextBlock Margin="5" Text="{DynamicResource SoftwareVersion}" />
        <TextBlock Margin="5" Text="{Binding SoftwareVersion}" />
        <TextBlock Margin="5" Text="{Binding SoftwareCreateTime}" />

        <Button
            Margin="5"
            Command="{Binding EnterBurnInModeCommand}"
            Content="{StaticResource StartBurnInMode}"
            Cursor="Hand"
            ToolTip="{StaticResource ForDevelopersToUsePleaseUseCaution}" />
        <Button
            Margin="5"
            Command="{Binding LeaveBurnInModeCommand}"
            Content="{StaticResource StopBurnInMode}"
            ToolTip="{StaticResource ForDevelopersToUsePleaseUseCaution}" />
        <Button
            Margin="5"
            Command="{Binding StartSingleStepDebugCommand}"
            Content="{DynamicResource StartSingle-stepDebugging}"
            Cursor="Hand"
            IsEnabled="{Binding SingleStepBtnEnable, Converter={StaticResource BoolInverter}}"
            ToolTip="{StaticResource ForDevelopersToUsePleaseUseCautionOnlyRunningProcessesAreSupported}" />
        <Button
            Margin="5"
            Command="{Binding StopSingleStepDebugCommand}"
            Content="{DynamicResource StopSingle-stepDebugging}"
            ToolTip="{StaticResource ForDevelopersToUsePleaseUseCaution}" />
        <Button
            Margin="5"
            Command="{Binding MachineOperationSingleStepCommand}"
            Content="{StaticResource Single-stepRunning}"
            Cursor="Hand"
            ToolTip="{StaticResource ForDevelopersToUsePleaseUseCaution}" />
        <Button
            Margin="5"
            Command="{Binding MachineOperationCommand}"
            CommandParameter="ResetMachine"
            Content="{DynamicResource ResetMachine}" />
        <Button
            Margin="5"
            Command="{Binding MachineOperationCommand}"
            CommandParameter="StartMachine"
            Content="{DynamicResource StartupMachine}" />
        <Button
            Margin="5"
            Command="{Binding MachineOperationCommand}"
            CommandParameter="StopMachine"
            Content="{DynamicResource StopMachine}" />
        <Button
            Margin="5"
            Command="{Binding MachineOperationCommand}"
            CommandParameter="EMStopMachine"
            Content="{DynamicResource EMStopMachine}"
            Cursor="Hand" />
    </StackPanel>
</UserControl>
