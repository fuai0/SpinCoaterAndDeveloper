<UserControl
    x:Class="SpinCoaterAndDeveloper.App.Views.UserSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pass="clr-namespace:PrismAutomationPlatformExt;assembly=PrismAutomationPlatformExt"
    xmlns:prism="http://prismlibrary.com/"
    d:Height="450"
    d:Width="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border>
            <GroupBox
                Margin="0,0,2,0"
                Background="{StaticResource AppleHeavyBackGroundBrush}"
                Header="{DynamicResource CreateNewUser}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center">
                        <TextBox
                            Margin="0,0,0,30"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="{DynamicResource UserName}"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding NewUser.UserName}" />
                        <PasswordBox
                            Margin="0,0,0,30"
                            materialDesign:HintAssist.Hint="{DynamicResource Password}"
                            pass:PassWordExtensions.PassWord="{Binding NewUser.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Cursor="IBeam"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                            <i:Interaction.Behaviors>
                                <pass:PasswordBehavior />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <PasswordBox
                            Margin="0,0,0,30"
                            materialDesign:HintAssist.Hint="{DynamicResource PasswordSecond}"
                            pass:PassWordExtensions.PassWord="{Binding NewUser.PasswordSec, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Cursor="IBeam"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                            <i:Interaction.Behaviors>
                                <pass:PasswordBehavior />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <ComboBox
                            Margin="0,0,0,60"
                            materialDesign:HintAssist.Hint="{DynamicResource Authority}"
                            materialDesign:HintAssist.HintOpacity=".26"
                            IsEditable="False"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            Text="{Binding NewUser.Authority}">
                            <ComboBoxItem Content="{DynamicResource Operator}" />
                            <ComboBoxItem Content="{DynamicResource Administrator}" />
                        </ComboBox>

                    </StackPanel>
                    <Button
                        Grid.Row="1"
                        Command="{Binding CreateUserCommand}"
                        Content="{DynamicResource CreateNewUser}" />
                </Grid>
            </GroupBox>
        </Border>
        <Border Grid.Column="1">
            <GroupBox
                Margin="2,0,2,0"
                Background="{StaticResource AppleHeavyBackGroundBrush}"
                Header="{DynamicResource UserManager}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <DataGrid
                        x:Name="dtgUserManager"
                        materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
                        AutoGenerateColumns="False"
                        Background="{StaticResource AppleHeavyBackGroundBrush}"
                        CanUserAddRows="False"
                        ColumnWidth="*"
                        IsReadOnly="True"
                        ItemsSource="{Binding Users}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding UserName}" Header="{DynamicResource UserName}" />
                            <!--<DataGridTextColumn Binding="{Binding Password}" Header="密码" />-->
                            <DataGridTextColumn Binding="{Binding Authority}" Header="{DynamicResource Authority}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding SearchUserCommand}"
                            Content="{DynamicResource Search}"
                            Cursor="Hand" />
                        <Button
                            MinWidth="100"
                            Margin="10,0,0,0"
                            Command="{Binding DeleteUserCommand}"
                            CommandParameter="{Binding SelectedItem, ElementName=dtgUserManager}"
                            Content="{DynamicResource Delete}"
                            Cursor="Hand" />
                    </StackPanel>
                </Grid>

            </GroupBox>
        </Border>
        <Border Grid.Column="2">
            <GroupBox
                Margin="2,0,0,0"
                Background="{StaticResource AppleHeavyBackGroundBrush}"
                Header="{DynamicResource ChangePassword}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center">
                        <TextBox
                            Margin="0,0,0,30"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="{DynamicResource UserName}"
                            Cursor="IBeam"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding ChangePWDUser.UserName}" />
                        <PasswordBox
                            Margin="0,0,0,30"
                            materialDesign:HintAssist.Hint="{DynamicResource OldPassword}"
                            pass:PassWordExtensions.PassWord="{Binding ChangePWDUser.PasswordOld, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Cursor="IBeam"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                            <i:Interaction.Behaviors>
                                <pass:PasswordBehavior />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <PasswordBox
                            Margin="0,0,0,30"
                            materialDesign:HintAssist.Hint="{DynamicResource NewPassword}"
                            pass:PassWordExtensions.PassWord="{Binding ChangePWDUser.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Cursor="IBeam"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                            <i:Interaction.Behaviors>
                                <pass:PasswordBehavior />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <PasswordBox
                            Margin="0,0,0,30"
                            materialDesign:HintAssist.Hint="{DynamicResource NewPasswordSecond}"
                            pass:PassWordExtensions.PassWord="{Binding ChangePWDUser.PasswordSec, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Cursor="IBeam"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                            <i:Interaction.Behaviors>
                                <pass:PasswordBehavior />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <ComboBox
                            Margin="0,0,0,60"
                            materialDesign:HintAssist.Hint="{DynamicResource Authority}"
                            materialDesign:HintAssist.HintOpacity=".26"
                            IsEditable="False"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            Text="{Binding ChangePWDUser.Authority}">
                            <ComboBoxItem Content="{DynamicResource Operator}" />
                            <ComboBoxItem Content="{DynamicResource Administrator}" />
                        </ComboBox>

                    </StackPanel>
                    <Button
                        Grid.Row="1"
                        Command="{Binding ChangePWDCommand}"
                        CommandParameter="{Binding ChangePWDUser}"
                        Content="{DynamicResource ChangePassword}"
                        Cursor="Hand" />
                </Grid>
            </GroupBox>
        </Border>
    </Grid>
</UserControl>
