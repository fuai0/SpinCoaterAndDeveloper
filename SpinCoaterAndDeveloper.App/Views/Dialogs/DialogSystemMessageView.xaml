<UserControl
    x:Class="SpinCoaterAndDeveloper.App.Views.DialogSystemMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="clr-namespace:SpinCoaterAndDeveloper.App.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vc="clr-namespace:ValueConverters;assembly=ValueConverters"
    d:DesignHeight="260"
    d:DesignWidth="380"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <cv:ContentLengthToVisibilityConverter x:Key="ContentLengthToVisibilityConverter" />
        <vc:EnumToObjectConverter x:Key="EnumToIconConverter">
            <vc:EnumToObjectConverter.Items>
                <ResourceDictionary>
                    <materialDesign:PackIconKind x:Key="Info">InformationOutline</materialDesign:PackIconKind>
                    <materialDesign:PackIconKind x:Key="Warn">AlertOutline</materialDesign:PackIconKind>
                    <materialDesign:PackIconKind x:Key="Error">CloseOctagonOutline</materialDesign:PackIconKind>
                </ResourceDictionary>
            </vc:EnumToObjectConverter.Items>
        </vc:EnumToObjectConverter>
        <vc:EnumToObjectConverter x:Key="EnumToBrushConverter">
            <vc:EnumToObjectConverter.Items>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="Info" Color="#424242" />
                    <SolidColorBrush x:Key="Warn" Color="#f57f17" />
                    <SolidColorBrush x:Key="Error" Color="#d50000" />
                </ResourceDictionary>
            </vc:EnumToObjectConverter.Items>
        </vc:EnumToObjectConverter>
        <vc:EnumToObjectConverter x:Key="EnumToColorZoneConverter">
            <vc:EnumToObjectConverter.Items>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="Info" Color="#bdbdbd" />
                    <SolidColorBrush x:Key="Warn" Color="#fff59d" />
                    <SolidColorBrush x:Key="Error" Color="#ef9a9a" />
                </ResourceDictionary>
            </vc:EnumToObjectConverter.Items>
        </vc:EnumToObjectConverter>
    </UserControl.Resources>
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="WindowStyle" Value="SingleBorderWindow" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="Width" Value="500" />
            <Setter Property="Height" Value="260" />
            <Setter Property="Title" Value="Application Info" />
            <Setter Property="Topmost" Value="True" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <materialDesign:ColorZone
                    x:Name="MessageColorZone"
                    Padding="0"
                    materialDesign:ElevationAssist.Elevation="Dp2"
                    Background="{Binding DialogLevel, Converter={StaticResource EnumToColorZoneConverter}}"
                    DockPanel.Dock="Top"
                    Mode="PrimaryMid">
                    <DockPanel LastChildFill="True">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="{Binding DialogLevel, Converter={StaticResource EnumToBrushConverter}}"
                                Kind="{Binding DialogLevel, Converter={StaticResource EnumToIconConverter}}" />
                            <TextBlock
                                Margin="16,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="警告"
                                FontSize="20"
                                Foreground="{Binding DialogLevel, Converter={StaticResource EnumToBrushConverter}}"
                                Text="{Binding Title}" />
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>
                <TextBlock
                    Grid.Row="1"
                    Padding="15,0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding Content}"
                    TextWrapping="Wrap" />
                <StackPanel
                    Grid.Row="2"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="ButtonCancel"
                        Margin="0,0,10,0"
                        d:Content="取消"
                        Command="{Binding CancelCommand}"
                        Content="{Binding ButtonCancelInfo}"
                        Cursor="Hand"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Visibility="{Binding ElementName=ButtonCancel, Path=Content.Length, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
                    <Button
                        x:Name="BtnYes"
                        d:Content="确认"
                        Command="{Binding YesCommand}"
                        Content="{Binding ButtonYesInfo}"
                        Cursor="Hand"
                        IsDefault="True"
                        Visibility="{Binding ElementName=BtnYes, Path=Content.Length, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
