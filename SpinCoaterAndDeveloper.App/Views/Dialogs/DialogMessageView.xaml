<UserControl
    x:Class="SpinCoaterAndDeveloper.App.Views.Dialogs.DialogMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="clr-namespace:SpinCoaterAndDeveloper.App.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:SpinCoaterAndDeveloper.App.Views.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <cv:ContentLengthToVisibilityConverter x:Key="ContentLengthToVisibilityConverter" />
    </UserControl.Resources>
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="WindowStyle" Value="SingleBorderWindow" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="Width" Value="380" />
            <Setter Property="Height" Value="260" />
            <Setter Property="Title" Value="提示" />
            <Setter Property="Topmost" Value="True" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <materialDesign:ColorZone
                    x:Name="MessageColorZone"
                    Padding="0"
                    materialDesign:ElevationAssist.Elevation="Dp2"
                    DockPanel.Dock="Top"
                    Mode="PrimaryMid">
                    <DockPanel LastChildFill="True">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Kind="AlertOutline" />
                            <TextBlock
                                Margin="16,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="警告"
                                FontSize="20"
                                Text="{Binding Title}" />
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>
                <TextBlock
                    Grid.Row="1"
                    Padding="15,0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding Content}"
                    TextWrapping="Wrap" />
                <StackPanel
                    Grid.Row="2"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="ButtonRedirect"
                        Margin="0,0,10,0"
                        d:Content="跳转"
                        Command="{Binding RedirectCommand}"
                        Content="{Binding ButtonRedirectInfo}"
                        Cursor="Hand"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Visibility="{Binding ElementName=ButtonRedirect, Path=Content.Length, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
                    <Button
                        x:Name="ButtonIgnore"
                        Margin="0,0,10,0"
                        d:Content="忽略"
                        Command="{Binding IgnoreCommand}"
                        Content="{Binding ButtonIgnoreInfo}"
                        Cursor="Hand"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Visibility="{Binding ElementName=ButtonIgnore, Path=Content.Length, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
                    <Button
                        x:Name="ButtonCancel"
                        Margin="0,0,10,0"
                        d:Content="取消"
                        Command="{Binding CancelCommand}"
                        Content="{Binding ButtonCancelInfo}"
                        Cursor="Hand"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Visibility="{Binding ElementName=ButtonCancel, Path=Content.Length, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
                    <Button
                        x:Name="BtnYes"
                        d:Content="确认"
                        Command="{Binding YesCommand}"
                        Content="{Binding ButtonYesInfo}"
                        Cursor="Hand"
                        IsDefault="True"
                        Visibility="{Binding ElementName=BtnYes, Path=Content.Length, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
