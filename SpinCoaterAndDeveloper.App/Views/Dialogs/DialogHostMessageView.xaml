<UserControl
    x:Class="SpinCoaterAndDeveloper.App.Views.Dialogs.DialogHostMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="clr-namespace:SpinCoaterAndDeveloper.App.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SpinCoaterAndDeveloper.App.Views.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Width="380"
    Height="220"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <cv:ContentLengthToVisibilityConverter x:Key="ContentLengthToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Border
            Background="{StaticResource AppleHeavyBackGroundBrush}"
            BorderBrush="{StaticResource AppleLightTextForegroundBrush}"
            BorderThickness="0,0,0,1"
            CornerRadius="4 4 0 0">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="26"
                    Height="26"
                    Margin="4,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource SecondaryAccentForegroundBrush}"
                    Kind="AlertOutline" />
                <TextBlock
                    Margin="4,0,0,0"
                    Padding="5"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="{StaticResource SecondaryAccentForegroundBrush}"
                    Text="{Binding Title}" />
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Background="{StaticResource AppleLightBackGroundBrush}">
            <TextBlock
                Padding="15,0"
                VerticalAlignment="Center"
                FontSize="14"
                Text="{Binding Content}"
                TextWrapping="Wrap" />
        </Border>
        <Border
            Grid.Row="2"
            Background="{StaticResource AppleLightBackGroundBrush}"
            BorderBrush="{StaticResource AppleLightTextForegroundBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0 0 4 4">
            <StackPanel
                Margin="10"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="CancelButton"
                    Margin="0,0,10,0"
                    Command="{Binding CancelCommand}"
                    Content="{Binding CancelInfo}"
                    Cursor="Hand"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Visibility="{Binding ElementName=CancelButton, Path=Content.Length, Converter={StaticResource ContentLengthToVisibilityConverter}}" />
                <Button
                    x:Name="BtnRepeat"
                    Command="{Binding SaveCommand}"
                    Content="{Binding SaveInfo}"
                    Cursor="Hand" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
