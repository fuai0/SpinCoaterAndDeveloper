<UserControl
    x:Class="SpinCoaterAndDeveloper.App.Views.InterlockDialogMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="clr-namespace:SpinCoaterAndDeveloper.App.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:SpinCoaterAndDeveloper.App.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:InterlockDialogMessageViewModel}"
    d:Height="360"
    d:Width="520"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="WindowStyle" Value="SingleBorderWindow" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="Width" Value="520" />
            <Setter Property="Height" Value="360" />
            <Setter Property="Title" Value="提示" />
            <Setter Property="Topmost" Value="True" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <materialDesign:ColorZone
                    x:Name="MessageColorZone"
                    Padding="0"
                    materialDesign:ElevationAssist.Elevation="Dp2"
                    DockPanel.Dock="Top"
                    Mode="PrimaryMid">
                    <DockPanel LastChildFill="True">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Kind="AlertOutline" />
                            <TextBlock
                                Margin="16,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="警告"
                                FontSize="20"
                                Text="{Binding Title}" />
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="4"
                        Padding="15,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Text="{Binding Content}"
                        TextWrapping="Wrap" />
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding DifferentOutputsCollection}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding Status}" />
                                    <Button
                                        Grid.Row="1"
                                        Command="{Binding DataContext.InterlockOutputCommand, RelativeSource={RelativeSource AncestorType=ItemsControl, Mode=FindAncestor}}"
                                        CommandParameter="{Binding}"
                                        Content="{Binding ShowOnUIName}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl Grid.Row="2" ItemsSource="{Binding DifferentAxesCollection}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding Position, StringFormat={}{0:F2}mm}" />
                                    <Button
                                        Grid.Row="1"
                                        Command="{Binding DataContext.InterlockAxisCommand, RelativeSource={RelativeSource AncestorType=ItemsControl, Mode=FindAncestor}}"
                                        CommandParameter="{Binding}"
                                        Content="{Binding ShowOnUIName}" />
                                </Grid>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <StackPanel
                    Grid.Row="2"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="ButtonIgnore"
                        Margin="0,0,10,0"
                        d:Content="强制启动"
                        Command="{Binding IgnoreCommand}"
                        Content="{Binding ButtonIgnoreInfo}"
                        Foreground="{StaticResource SecondaryAccentForegroundBrush}"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                    <Button
                        x:Name="BtnYes"
                        d:Content="确认"
                        Command="{Binding YesCommand}"
                        Content="{Binding ButtonYesInfo}"
                        IsDefault="True" />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
