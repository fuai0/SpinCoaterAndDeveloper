<UserControl
    x:Class="SpinCoaterAndDeveloper.App.Views.AppleIndexView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:zeroControl="clr-namespace:ZeroControls;assembly=ZeroControls"
    d:DesignHeight="700"
    d:DesignWidth="1280"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid Margin="12,5,12,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Part1  -->
            <Border
                Grid.Row="0"
                Margin="0,0,1,2"
                Background="{StaticResource AppleHeavyBackGroundBrush}">
                <ContentControl prism:RegionManager.RegionName="AppleIndexLeft1Region" />
            </Border>
            <!--  Part2  -->
            <Border
                Grid.Row="1"
                Margin="0,2,1,0"
                Background="{StaticResource AppleHeavyBackGroundBrush}">
                <ContentControl prism:RegionManager.RegionName="AppleIndexLeft2Region" />
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Part3  -->
            <Border
                Grid.Row="0"
                Margin="1,0,0,1"
                Background="{StaticResource AppleHeavyBackGroundBrush}">
                <ContentControl prism:RegionManager.RegionName="AppleIndexRight1Region" />
            </Border>
            <!--  Part4  -->
            <Border
                Grid.Row="1"
                Margin="1,1,0,1"
                Background="{StaticResource AppleHeavyBackGroundBrush}">
                <ContentControl prism:RegionManager.RegionName="AppleIndexRight2Region" />
            </Border>
            <!--  Part5  -->
            <Border
                Grid.Row="2"
                Margin="1,1,0,1"
                Background="{StaticResource AppleHeavyBackGroundBrush}">
                <ContentControl prism:RegionManager.RegionName="AppleIndexRight3Region" />
            </Border>
            <!--  Part6  -->
            <Border
                Grid.Row="3"
                Margin="1,1,0,0"
                Background="{StaticResource AppleHeavyBackGroundBrush}">
                <ContentControl prism:RegionManager.RegionName="AppleIndexRight4Region" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
