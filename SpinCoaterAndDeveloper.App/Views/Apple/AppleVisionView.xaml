<UserControl
    x:Class="SpinCoaterAndDeveloper.App.Views.AppleVisionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vc="clr-namespace:ValueConverters;assembly=ValueConverters"
    xmlns:viewmodels="clr-namespace:SpinCoaterAndDeveloper.App.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AppleVisionViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1280"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <vc:BoolToBrushConverter
            x:Key="BoolToBrushConverter"
            FalseValue="{StaticResource AppleHeavyBackGroundBrush}"
            TrueValue="{StaticResource AppleLightBackGroundBrush}" />
    </UserControl.Resources>
    <Grid Margin="12,5,12,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ItemsControl ItemsSource="{Binding VisionMenuBars}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Margin="0,0,5,5"
                        Background="{Binding IsShow, Converter={StaticResource BoolToBrushConverter}, Mode=OneWay}"
                        Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl, AncestorLevel=1}}"
                        CommandParameter="{Binding}">
                        <Button.Content>
                            <StackPanel
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Orientation="Horizontal">
                                <md:PackIcon
                                    Margin="0,0,2,0"
                                    VerticalAlignment="Center"
                                    Kind="{Binding Icon, Mode=OneWay}" />
                                <TextBlock
                                    Margin="2,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Title, Mode=OneWay}" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="VisionViewRegion" />
    </Grid>
</UserControl>
