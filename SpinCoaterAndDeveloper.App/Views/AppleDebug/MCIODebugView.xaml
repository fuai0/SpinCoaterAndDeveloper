<UserControl
    x:Class="SpinCoaterAndDeveloper.App.Views.MCIODebugView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vc="clr-namespace:ValueConverters;assembly=ValueConverters"
    xmlns:viewmodels="clr-namespace:SpinCoaterAndDeveloper.App.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MCIODebugViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1280"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <vc:BoolToBrushConverter
            x:Key="BoolToBrushConverter"
            FalseValue="{StaticResource SecondaryAccentForegroundBrush}"
            TrueValue="#53AC7A" />
        <Style
            x:Key="DataGridColumnHeaderStyle"
            BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}"
            TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="DataGridColumnElementStyleDefine"
            BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}"
            TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="DataGridColumnCellTemplateHeaderDefine"
            BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}"
            TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Column="0"
            Margin="0,0,2,0"
            Background="{StaticResource AppleHeavyBackGroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <UniformGrid
                Margin="0,5,5,0"
                Columns="5"
                FirstColumn="1">
                <TextBlock
                    Margin="2,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    FontSize="15"
                    Text="{DynamicResource InputPointSelectGroup}" />
                <ComboBox
                    x:Name="InputGroupSelected"
                    Margin="2,0,0,0"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Center"
                    ItemsSource="{Binding IOInputGroupCollection}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding IOInputGroupChangedCommand}" CommandParameter="{Binding SelectedItem, ElementName=InputGroupSelected}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
                <TextBox
                    Margin="2,0,0,0"
                    Padding="0"
                    VerticalAlignment="Bottom"
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Text="{Binding IOInputFilter, UpdateSourceTrigger=PropertyChanged}">
                    <materialDesign:HintAssist.Hint>
                        <StackPanel Margin="-2,0,0,0" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Magnify" />
                            <TextBlock Text="{DynamicResource InputPointFilter}" />
                        </StackPanel>
                    </materialDesign:HintAssist.Hint>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding IOInputFilterCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <Button
                    Margin="2,0,0,0"
                    VerticalAlignment="Bottom"
                    Command="{Binding ShowAllInputCommand}"
                    Content="{DynamicResource ShowAllInputs}" />
            </UniformGrid>
            <DataGrid
                Grid.Row="1"
                Margin="5,5,5,0"
                materialDesign:DataGridAssist.CellPadding="10 2 10 2"
                materialDesign:DataGridAssist.ColumnHeaderPadding="10 2 10 2"
                materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
                AutoGenerateColumns="False"
                Background="{StaticResource AppleHeavyBackGroundBrush}"
                CanUserAddRows="False"
                CanUserSortColumns="False"
                HeadersVisibility="All"
                ItemsSource="{Binding IOInputCollection}"
                RowHeaderWidth="1"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Number, Mode=OneWay}"
                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                        ElementStyle="{StaticResource DataGridColumnElementStyleDefine}"
                        IsReadOnly="True">
                        <DataGridTextColumn.HeaderStyle>
                            <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Content" Value="{DynamicResource Number}" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding ShowOnUIName, Mode=OneWay}"
                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                        ElementStyle="{StaticResource DataGridColumnElementStyleDefine}"
                        IsReadOnly="True">
                        <DataGridTextColumn.HeaderStyle>
                            <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Content" Value="{DynamicResource Name}" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PhysicalLocation, Mode=OneWay}"
                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                        ElementStyle="{StaticResource DataGridColumnElementStyleDefine}"
                        IsReadOnly="True">
                        <DataGridTextColumn.HeaderStyle>
                            <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Content" Value="{DynamicResource PhysicalLocation}" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn
                        Width="*"
                        Header="{DynamicResource Status}"
                        HeaderStyle="{StaticResource DataGridColumnCellTemplateHeaderDefine}"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PackIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{Binding Status, Converter={StaticResource BoolToBrushConverter}, Mode=OneWay}"
                                    Kind="LocationEnter" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid
            Grid.Column="1"
            Margin="2,0,0,0"
            Background="{StaticResource AppleHeavyBackGroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <UniformGrid
                Grid.Column="1"
                Margin="0,5,5,0"
                Columns="5"
                FirstColumn="1">
                <TextBlock
                    Margin="2,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    FontSize="15"
                    Text="{DynamicResource OutputPointSelectGroup}" />
                <ComboBox
                    x:Name="OutputGroupSelected"
                    Margin="2,0,0,0"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Center"
                    ItemsSource="{Binding IOOutputGroupCollection}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding IOOutputGroupChangedCommand}" CommandParameter="{Binding SelectedItem, ElementName=OutputGroupSelected}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
                <TextBox
                    Margin="2,0,0,0"
                    Padding="0"
                    VerticalAlignment="Bottom"
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Text="{Binding IOOutputFilter, UpdateSourceTrigger=PropertyChanged}">
                    <materialDesign:HintAssist.Hint>
                        <StackPanel Margin="-2,0,0,0" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Magnify" />
                            <TextBlock Text="{DynamicResource OutputPointFilter}" />
                        </StackPanel>
                    </materialDesign:HintAssist.Hint>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding IOOutputFilterCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <Button
                    Margin="2,0,0,0"
                    VerticalAlignment="Bottom"
                    Command="{Binding ShowAllOutputCommand}"
                    Content="{DynamicResource ShowAllOutputs}" />
            </UniformGrid>
            <DataGrid
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,5,5,0"
                materialDesign:DataGridAssist.CellPadding="10 2 10 2"
                materialDesign:DataGridAssist.ColumnHeaderPadding="10 2 10 2"
                materialDesign:DataGridAssist.SelectedCellBorderBrush="Transparent"
                AutoGenerateColumns="False"
                Background="{StaticResource AppleHeavyBackGroundBrush}"
                CanUserAddRows="False"
                CanUserSortColumns="False"
                HeadersVisibility="All"
                ItemsSource="{Binding IOOutputCollection}"
                RowHeaderWidth="1"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Number, Mode=OneWay}"
                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                        ElementStyle="{StaticResource DataGridColumnElementStyleDefine}"
                        IsReadOnly="True">
                        <DataGridTextColumn.HeaderStyle>
                            <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Content" Value="{DynamicResource Number}" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding ShowOnUIName, Mode=OneWay}"
                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                        ElementStyle="{StaticResource DataGridColumnElementStyleDefine}"
                        IsReadOnly="True">
                        <DataGridTextColumn.HeaderStyle>
                            <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Content" Value="{DynamicResource Name}" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PhysicalLocation, Mode=OneWay}"
                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                        ElementStyle="{StaticResource DataGridColumnElementStyleDefine}"
                        IsReadOnly="True">
                        <DataGridTextColumn.HeaderStyle>
                            <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Content" Value="{DynamicResource PhysicalLocation}" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn
                        Width="*"
                        Header="{DynamicResource Status}"
                        HeaderStyle="{StaticResource DataGridColumnCellTemplateHeaderDefine}"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PackIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{Binding Status, Converter={StaticResource BoolToBrushConverter}, Mode=OneWay}"
                                    Kind="LocationExit" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn
                        Width="*"
                        Header="{DynamicResource Operate}"
                        HeaderStyle="{StaticResource DataGridColumnCellTemplateHeaderDefine}"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Width="40"
                                    Height="19"
                                    Padding="0"
                                    Command="{Binding DataContext.SetOutputStsCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=1}}"
                                    CommandParameter="{Binding}">
                                    <materialDesign:PackIcon Kind="SwapVerticalCircleOutline" />
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
